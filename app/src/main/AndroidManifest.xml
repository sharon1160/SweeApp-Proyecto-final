<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharon.sweetapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SweetApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActConsultar"
            android:label="@string/title_activity_act_consultar"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ActNuevoProducto"
            android:label="@string/title_activity_act_nuevo_producto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registrar"
            android:label="@string/title_activity_registrar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActMain"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActLogin"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>